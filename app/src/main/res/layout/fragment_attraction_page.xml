                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingHorizontal="10dp"
                android:textStyle="bold"
                android:text="Read more..."
                />

            <TextView
